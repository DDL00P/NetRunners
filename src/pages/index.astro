---
import NavMenu from "../components/NavMenu.astro";
import ReverseShells from "../components/ReverseShells.astro";
import ServicesPentest from "../components/ServicesPentest.astro";
import Privesc from "../components/Privesc.astro";
import "../styles/global.css";
---

<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Penetration Testing Toolkit</title>
	</head>
	<body class="bg-gray-100 font-sans">
		<div class="container mx-auto p-4">
			<header class="text-center mb-8">
				<h1 class="text-4xl font-bold text-gray-800">
					Penetration Testing Toolkit
				</h1>
				<p class="text-lg text-gray-600 mt-2">
					A Lightweight, Client-Side Suite for Pentesters
				</p>
			</header>

			<NavMenu />
			<main>
				<ReverseShells />
				<ServicesPentest />
				<Privesc />
			</main>
		</div>
		<script type="module" src="/script.js"></script>
	</body>
</html>
