<section id="reverse-shells" class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold mb-4">Privilege Escalation</h2>
    <div class="mb-4">
        <label
            for="privesc-search"
            class="block text-sm font-medium text-gray-700"
            >Search Techniques</label
        >
        <input
            type="text"
            id="privesc-search"
            class="mt-1 block w-full p-2 border rounded-md"
            placeholder="e.g., sudo, vim, SUID"
        />
        <div id="privesc-tags" class="flex flex-wrap gap-2 mt-2"></div>
        <div id="privesc-results" class="mt-4 max-h-64 overflow-y-auto"></div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
        <div>
            <label
                for="privesc-selected"
                class="block text-sm font-medium text-gray-700"
                >Selected Technique</label
            >
            <input
                type="text"
                id="privesc-selected"
                class="mt-1 block w-full p-2 border rounded-md bg-gray-100"
                readonly
            />
        </div>
        <div>
            <label
                for="privesc-command"
                class="block text-sm font-medium text-gray-700"
                >Command to Execute</label
            >
            <input
                type="text"
                id="privesc-command"
                class="mt-1 block w-full p-2 border rounded-md"
                placeholder="e.g., /bin/sh"
            />
        </div>
    </div>
    <button
        id="privesc-generate-btn"
        class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600"
        >Generate Command</button
    >
    <div id="privesc-output-div" class="hidden mt-6">
        <h3 class="text-lg font-semibold mb-2">
            Generated Privilege Escalation Command
        </h3>
        <p id="privesc-description" class="text-gray-600 mb-4"></p>
        <pre id="privesc-output" class="bg-gray-800 text-white p-4 rounded-md">
        </pre>
        <button
            id="privesc-copy-btn"
            class="mt-4 bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600"
            >Copy to Clipboard</button
        >
    </div>
</section>
