---
// Import global styles and components
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="flex flex-col items-center justify-center min-h-[calc(100vh-120px)] px-4 sm:px-8 py-8 sm:py-12 mt-8 sm:mt-0">
    <!-- Main Support Container -->
    <div class="max-w-2xl w-full text-center space-y-6 sm:space-y-8">
      
      <!-- Coffee Icon with Animation -->
      <div class="mb-6 sm:mb-8 z-0 relative">
        <div 
          class="inline-flex items-center justify-center w-20 h-20 sm:w-24 sm:h-24 rounded-full mb-4 sm:mb-6 relative"
          style="background: var(--theme-card); border: 2px solid var(--theme-border);"
        >
          <!-- Vapor/Steam effect -->
          <div class="absolute left-1/2 top-3 sm:top-4 -translate-x-1/2 z-0 pointer-events-none select-none">
            <span class="block absolute left-1/2 -translate-x-1/2 w-4 sm:w-6 h-8 sm:h-10 opacity-60"
                  style="filter: blur(2px);">
              <svg width="100%" height="100%" viewBox="0 0 24 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path 
                  d="M12 38 Q10 30 12 22 Q14 14 12 6"
                  stroke="var(--theme-text)" 
                  stroke-width="2"
                  stroke-linecap="round"
                  opacity="0.25"
                />
                <path 
                  d="M16 36 Q15 28 16 20 Q17 12 16 4"
                  stroke="var(--theme-text)" 
                  stroke-width="1.5"
                  stroke-linecap="round"
                  opacity="0.18"
                />
                <path 
                  d="M8 36 Q9 28 8 20 Q7 12 8 4"
                  stroke="var(--theme-text)" 
                  stroke-width="1.5"
                  stroke-linecap="round"
                  opacity="0.18"
                />
              </svg>
            </span>
            <!-- Animate the vapor with CSS keyframes -->
            <style>
              .vapor-anim {
                animation: vaporUp 2.5s infinite ease-in-out;
              }
              .vapor-anim2 {
                animation: vaporUp 2.5s infinite ease-in-out 1.2s;
              }
              @keyframes vaporUp {
                0% { opacity: 0.2; transform: translateY(0) scaleX(1);}
                20% { opacity: 0.5; }
                50% { opacity: 0.7; transform: translateY(-10px) scaleX(1.05);}
                80% { opacity: 0.3; }
                100% { opacity: 0; transform: translateY(-18px) scaleX(1.1);}
              }
            </style>
            <svg class="absolute left-1/2 -translate-x-1/2 vapor-anim" width="18" height="32" viewBox="0 0 18 32" fill="none">
              <path d="M9 30 Q7 22 9 14 Q11 6 9 2" stroke="var(--theme-text)" stroke-width="1.5" stroke-linecap="round" opacity="0.35"/>
            </svg>
            <svg class="absolute left-1/2 -translate-x-1/2 vapor-anim2" width="12" height="24" viewBox="0 0 12 24" fill="none">
              <path d="M6 22 Q5 16 6 10 Q7 4 6 2" stroke="var(--theme-text)" stroke-width="1" stroke-linecap="round" opacity="0.22"/>
            </svg>
          </div>
          <!-- Coffee cup SVG -->
          <svg xmlns="http://www.w3.org/2000/svg" class="relative z-10 h-10 w-10 sm:h-12 sm:w-12" viewBox="0 0 48 48" fill="none">
            <!-- Cup body -->
            <ellipse cx="24" cy="32" rx="14" ry="7" fill="var(--theme-card)" stroke="var(--theme-border)" stroke-width="2"/>
            <rect x="10" y="16" width="28" height="18" rx="10" fill="var(--theme-card)" stroke="var(--theme-border)" stroke-width="2"/>
            <!-- Coffee liquid -->
            <ellipse cx="24" cy="24" rx="12" ry="5" fill="var(--theme-text)" opacity="0.18"/>
            <ellipse cx="24" cy="24" rx="10" ry="4" fill="var(--theme-text)" opacity="0.25"/>
            <!-- Cup rim -->
            <ellipse cx="24" cy="16" rx="14" ry="7" fill="none" stroke="var(--theme-border)" stroke-width="2"/>
            <!-- Handle -->
            <path d="M38 22 Q44 24 38 32" stroke="var(--theme-border)" stroke-width="2" fill="none"/>
          </svg>
        </div>
      </div>

      <!-- Main Title -->
      <h1 class="text-3xl sm:text-4xl font-bold mb-4 sm:mb-6 tracking-wider" style="color: var(--theme-text);">
        â˜• Support Us
      </h1>

      <!-- Description Text -->
      <div class="space-y-4 sm:space-y-6 text-base sm:text-lg leading-relaxed" style="color: var(--theme-card-text);">
        <p class="opacity-90">
          We do this for the love of the craft, reverse shells, and late-night Discord laughs.
        </p>
        <p class="opacity-90">
          But hey â€” if you feel like buying us a coffee (or three), we won't say no ðŸ‘€
        </p>
      </div>

      <!-- Coffee Link Button -->
      <div class="mt-6 sm:mt-8 mb-4 sm:mb-6">
        <a 
          href="https://coff.ee/netrunners" 
          target="_blank" 
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 sm:gap-3 px-6 sm:px-8 py-3 sm:py-4 rounded-xl font-semibold text-base sm:text-lg transition-all duration-300 transform hover:scale-105 hover:shadow-xl group"
          style="background: var(--theme-card); color: var(--theme-card-text); border: 2px solid var(--theme-border);"
        >
          <span>ðŸ‘‰</span>
          <span>Buy us a coffee</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>

      <!-- Final Message -->
      <div class="mt-6 sm:mt-8 p-4 sm:p-6 rounded-xl border-2 transition-all duration-300 hover:shadow-lg" style="background: var(--theme-card); color: var(--theme-card-text); border-color: var(--theme-border);">
        <p class="text-base sm:text-lg font-medium">
          Every bit helps us keep breaking things... legally ðŸ˜‰
        </p>
      </div>

      <!-- Decorative Elements -->
      <div class="mt-8 sm:mt-12 flex justify-center space-x-3 sm:space-x-4 opacity-60">
        <div class="w-1.5 h-1.5 sm:w-2 sm:h-2 rounded-full animate-bounce" style="background: var(--theme-text);"></div>
        <div class="w-1.5 h-1.5 sm:w-2 sm:h-2 rounded-full animate-bounce" style="background: var(--theme-text); animation-delay: 0.1s;"></div>
        <div class="w-1.5 h-1.5 sm:w-2 sm:h-2 rounded-full animate-bounce" style="background: var(--theme-text); animation-delay: 0.2s;"></div>
      </div>

    </div>
  </div>

  <!-- Floating Coffee Cup Animation -->
  <div class="fixed bottom-4 sm:bottom-8 right-4 sm:right-8 opacity-20 animate-float">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 sm:h-16 sm:w-16" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--theme-text);">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
  </div>

  <style>
    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }
    
    .animate-float {
      animation: float 3s ease-in-out infinite;
    }
    
    .animate-pulse {
      animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    
    @keyframes pulse {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.5; }
    }
  </style>
</Layout>
