---
// Astro component: src/components/InputBox.astro
const labelText = Astro.props.label;
const inputId = labelText.toLowerCase().replace(/\s+/g, "-");
---

<div class="relative w-full">
    <input
        type="text"
        id={inputId}
        placeholder=" "
        class="peer w-full border rounded-md pt-3 pb-0.5 px-3 placeholder-transparent focus:outline-none border-inherit"
        style="background: var(--theme-card); color: var(--theme-card-text); border-color: var(--theme-border);"
    />
    <label
        for={inputId}
        class="absolute right-0 text-sm transition-all duration-200 ease-in-out
           peer-placeholder-shown:top-3.5
           peer-placeholder-shown:text-base
           peer-focus:top-2
           peer-focus:text-sm
           border rounded-sm px-1 border-inherit"
        style="background: var(--theme-card); color: var(--theme-card-text); border-color: var(--theme-border);"
    >
        {labelText}
    </label>
</div>
