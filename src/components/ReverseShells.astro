<section id="reverse-shells" class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-2xl font-semibold mb-4">Reverse Shell Generator</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
        <div>
            <label
                for="shell-type"
                class="block text-sm font-medium text-gray-700"
                >Shell Type</label
            >
            <select
                id="shell-type"
                class="mt-1 block w-full p-2 border rounded-md"
            >
                <option value="">Select a shell</option>
            </select>
        </div>
        <div>
            <label
                for="shell-ip"
                class="block text-sm font-medium text-gray-700"
                >Listener IP</label
            >
            <input
                type="text"
                id="shell-ip"
                class="mt-1 block w-full p-2 border rounded-md"
                placeholder="e.g., 192.168.1.100"
            />
        </div>
        <div>
            <label
                for="shell-port"
                class="block text-sm font-medium text-gray-700"
                >Listener Port</label
            >
            <input
                type="text"
                id="shell-port"
                class="mt-1 block w-full p-2 border rounded-md"
                placeholder="e.g., 4444"
            />
        </div>
    </div>
    <button
        id="shell-generate-btn"
        class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600"
        >Generate Shell</button
    >
    <div id="shell-output-div" class="hidden mt-6">
        <h3 class="text-lg font-semibold mb-2">Generated Reverse Shell</h3>
        <pre id="shell-output" class="bg-gray-800 text-white p-4 rounded-md">
        </pre>
        <button
            id="shell-copy-btn"
            class="mt-4 bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600"
            >Copy to Clipboard</button
        >
    </div>
</section>
